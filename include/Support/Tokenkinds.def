#ifndef TOK
#define TOK(ID)
#endif
#ifndef PUNCTUATOR
#define PUNCTUATOR(ID, SP) TOK(ID)
#endif
#ifndef KEYWORD
#define KEYWORD(ID, FLAG) TOK(kw_ ## ID)
#endif

// These define members of the tok::* namespace.

TOK(unknown)                    // Not a token.
TOK(eof)                        // End of file.
TOK(identifier)                 // [a-zA-Z_]\w*\b
TOK(constant)                   // [0-9]+\b

PUNCTUATOR(open_paren,          "(")
PUNCTUATOR(close_paren,         ")")
PUNCTUATOR(open_brace,          "{")
PUNCTUATOR(close_brace,         "}")
PUNCTUATOR(semi,                ";")
PUNCTUATOR(slash,                "/")
PUNCTUATOR(comma,               ",")
PUNCTUATOR(plus,                "+")
PUNCTUATOR(minus,               "-")
PUNCTUATOR(star,                "*")
PUNCTUATOR(equal,               "=")

KEYWORD(int                         , KEYALL)
KEYWORD(void                        , KEYALL)
KEYWORD(return                      , KEYALL)
KEYWORD(if                          , KEYALL)
KEYWORD(else                        , KEYALL)

#undef KEYWORD
#undef PUNCTUATOR
#undef TOK
